{# base inheritance #}
{% extends "base.html.jinja" %}
{# fill title block #}
{% block title %}Chat{% endblock %}
{# add script to head block #}
{% block head %}
    {{ super() }}
    <script type="text/javascript" src="{{ url_for('static', filename='chatScript.js') }}"></script>
{% endblock head %}
{# fill content block #}
{% block content %}
    <h1 id="chatTitle">Chat with {{ contact }}</h1>
    <div id="divMessages" class="scroll">{{ messages }}</div><br>
    <div id="divLoadMessages">
        <button type="button" onclick="fill();">Load messages</button>
    </div><br>
    {# <div id="divWriteSend">
        <form action="sendMessage" method="POST">
            <input type="text" name="txtMessage">
            <input type="submit" value="Send">
        </form>
    </div> #}
    <form id="msgForm" action="sendMessage" method="POST" style="bottom:0; margin: 0% 0% 0% 0%;">
        <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="Message" aria-label="Message" id="msg">
              <div class="input-group-append">
                <button class="btn btn-success" type="submit" id="sendBtn">Send</button>
              </div>
        </div>
    </form>
{% endblock %}